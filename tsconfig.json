{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "lib",
        // "outFile": "types/index.d.ts",
        // "emitDeclarationOnly": true,
        "strict": true,
        // "checkJs": true,
        // "allowJs": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "typeRoots": [
            "typings"
        ],
    },
    "include": [
        "src/**/*.ts",
        "typings/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
